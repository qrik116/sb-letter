$color_black-20     = #222
$color_black-30     = #343434
$color_grey-10      = #ddd
$color_grey-20      = #444
$color_grey-30      = #7c7c7c
$color_grey-40      = #181818
$color_grey-50      = #e9e9e9
$color_yellow-10    = #fbbe00

