include ../../default/pug/_mixins

- var projectName = 'Письмо'

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
html(lang="ru")
    block vars
    head
        title!= projectName + ' - ' + pageTitle
        meta(charset="UTF-8")
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i")
        style(type="text/css").
            @media (max-width:680px){[class].figure--{width:100%!important;padding:0!important;display:block;margin-bottom:40px!important}}@media (max-width:680px){[class].hidden-sx--{display:none!important}}@media (max-width:680px){[class].table-container--{padding-left:20px!important;padding-right:20px!important}}
        <!--[if mso]>
            style(type="text/css").
                .wrapper {
                    font-family: Arial, sans-serif;
                    font-weight: 400;
                }
        <![endif]-->
    body
        .wrapper
            .main(role="main")
                .table.body-text(style="margin: 0 auto;")
                    +table()
                        tr
                            +td()(style="padding: 10px 0")
                        tr
                            +td()(align="center")
                                block body
                        tr
                            +td()(style="padding: 10px 0")