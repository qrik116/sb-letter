mixin table()
    table(border="0" cellpadding="0" cellspacing="0" style="margin:0; padding:0;" width="100%")&attributes(attributes)
        if block
            block

mixin td()
    td(height="100%" style="border: none!important; border-width: 0; margin: 0; padding: 0 0 25px 0; color: #5c5c5c; font: 15px 'Open Sans', Arial, sans-serif; line-height: 1.5; font-weight: 400")&attributes(attributes)
        if block
            block

mixin a(href)
    a(href=(href || '#') style="border: none!important; border-width: 0; margin:0; padding:0; color: #009942; font: 15px 'Open Sans', Arial, sans-serif; line-height: 1.5; -webkit-text-size-adjust:none; display: inline-block; font-weight: 600; text-decoration: none;" target="_blank")&attributes(attributes)
        if block
            block

mixin aFooter(href)
    a(href=(href || '#') style="border: none!important; border-width: 0; margin:0; padding:0; color: #ffffff; font: 13px Arial, sans-serif; line-height: 1.5; -webkit-text-size-adjust:none; display: inline-block; font-weight: 400;" target="_blank")&attributes(attributes)
        if block
            block

mixin span(text)
    span(style="border: none!important; border-width: 0; margin:0; padding:0; color: #000000; font: 15px 'Open Sans', Arial, sans-serif; line-height: 1.5; -webkit-text-size-adjust:none; display: inline-block; font-weight: 400")&attributes(attributes)!= text

mixin img(src, alt)
    img(src=(src || "") alt=(alt || "") border="0" style="border: none!important; border-width: 0; margin:0; padding:0; display:block; max-width: 100%")&attributes(attributes)

mixin line(height, pt, pb)
    tr
        td(height="100%" style="border: none!important; border-width: 0; margin:0; padding: "+(pt || '0')+" 0 0;")
    tr
        td(bgcolor="#e5e5e5" height=height style="border: none!important; border-width: 0; margin:0; padding:0;")&attributes(attributes)
    tr
        td(height="100%" style="border: none!important; border-width: 0; margin:0; padding: 0 0 "+(pb || '0')+";")